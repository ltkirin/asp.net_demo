@model AspDemo.DomainModel.company.model.CompanyPutModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Редактировать компанию</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Название</label>
                <input asp-for="Title" class="form-control" required="required" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tin" class="control-label">ИНН</label>
                <input asp-for="Tin" class="form-control" required="required" />
                <span asp-validation-for="Tin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyType" class="control-label">Тип компании</label>
                <div class="row">
                    <input asp-for="CompanyType"
                           type="radio"
                           value="0">
                    <label class="control-label">Индивидуальный предприниматель</label>
                </div>
                <div class="row">
                    <input asp-for="CompanyType"
                           type="radio"
                           value="1" />
                    <label class="control-label">Юридическое лицо</label>
                </div>
            </div>
            <div class="form-group" hidden="hidden">
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <form asp-action="Delete">
        <input asp-for="Id" class="form-control" hidden="hidden" />
        <button type="submit" class="btn btn-danger" value="Delete">Удалить</button>
    </form>

    <div>
        <form asp-action="Index">
            <input type="submit" value="Назад" class="btn btn-primary" />
        </form>
    </div>
</div>

