@model AspDemo.DomainModel.company.model.CompanyPostModel

@{
    ViewData["Title"] = "NewCompany";
}

<h1>Добавить компанию</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Название</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tin" class="control-label">ИНН</label>
                <input asp-for="Tin" class="form-control" />
                <span asp-validation-for="Tin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyType" class="control-label">Тип компании</label>
                <div class="row">
                    <input asp-for="CompanyType"
                           type="radio"
                           value="0">
                    <label class="control-label">Индивидуальный предприниматель</label>
                </div>
                <div class="row">
                    <input asp-for="CompanyType"
                           type="radio"
                           value="1" />
                    <label class="control-label">Юридическое лицо</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

